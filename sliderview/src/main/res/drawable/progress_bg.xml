<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "background shadow" -->
    <item
        android:id="@+id/borderBg">
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:id="@+id/barBg"
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:angle="180"
                android:centerColor="#11FFFFFF"
                android:centerX="0.98"
                android:endColor="#22000000"
                android:startColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:angle="360"
                android:centerColor="#11000000"
                android:centerX="0.98"
                android:endColor="#22000000"
                android:startColor="#00000000"
                android:type="linear"/>
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:angle="-90"
                android:centerColor="#11000000"
                android:centerY="0.4"
                android:endColor="#00000000"
                android:startColor="#99000000"
                android:type="linear" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <gradient
                android:angle="90"
                android:centerColor="#00000000"
                android:centerY="0.05"
                android:endColor="#00000000"
                android:startColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>